{
  "name": "currycat-interface",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "vite build --config vite.config.ts --mode prod",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "vite --config vite.config.ts serve ./dist",
    "start": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "yarn build && electron-builder",
    "electron:dist": "yarn build && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/dom-speech-recognition": "^0.0.6",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^26.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  },
  "main": "main.js",
  "build": {
    "appId": "com.currycat.twitch-interface",
    "productName": "CurryCat Twitch Interface",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "entitlements.mac.plist"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "此應用程式需要麥克風權限來偵測語音並切換頭像表情。",
        "NSCameraUsageDescription": "此應用程式需要相機權限來提供完整的多媒體體驗。",
        "LSUIElement": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Microphone Access",
            "CFBundleURLSchemes": ["microphone"]
          }
        ]
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}
